<Container>
  <Name>cloudflare-ddns</Name>
  <Repository>cloudflarednsupdater</Repository>
  <Registry>ghcr.io/B0st0wn</Registry>
  <Network>bridge</Network>
  <MyIP>0.0.0.0</MyIP>
  <WebUI>http://[IP]:[PORT:7575]</WebUI>
  <Port>
    <HostPort>7575</HostPort>
    <ContainerPort>8080</ContainerPort>
    <Protocol>tcp</Protocol>
  </Port>
  <Volume>
    <HostDir>/mnt/user/appdata/cf-ddns/</HostDir>
    <ContainerDir>/data</ContainerDir>
    <Mode>rw</Mode>
  </Volume>
  <Environment>
    <Variable>
      <Name>CONFIG_SECRET</Name>
      <Default>changeme</Default>
      <Mode>normal</Mode>
    </Variable>
  </Environment>
  <Icon>https://example.com/icon.png</Icon>
  <Category>Networking</Category>
</Container>
